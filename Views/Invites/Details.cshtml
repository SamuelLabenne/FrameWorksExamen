@model FrameWorksExamen.Models.Invite
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Invite details";
}

<h1>@Localizer["Det"]</h1>

<div>
    <h4>@Localizer["Invite"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Person"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Name)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Event"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Name)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Sender"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sender.FirstName)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back"]</a>
</div>
